javascript:(function() {
  // Create the main container
  var container = document.createElement('div');
  container.style.position = 'fixed';
  container.style.top = '50%';
  container.style.left = '50%';
  container.style.transform = 'translate(-50%, -50%)';
  container.style.border = '1px solid #000';
  container.style.padding = '10px';
  container.style.background = '#fff';
  container.style.zIndex = '9999';
  container.style.cursor = 'move';

  var isDragging = false;
  var offsetX, offsetY;

  // Make the container draggable
  container.draggable = true;
  container.addEventListener('mousedown', function(e) {
    isDragging = true;
    offsetX = e.clientX - container.getBoundingClientRect().left;
    offsetY = e.clientY - container.getBoundingClientRect().top;
  });

  document.addEventListener('mousemove', function(e) {
    if (isDragging) {
      container.style.left = e.clientX - offsetX + 'px';
      container.style.top = e.clientY - offsetY + 'px';
    }
  });

  document.addEventListener('mouseup', function() {
    isDragging = false;
  });

  // Create title
  var title = document.createElement('div');
  title.textContent = 'TrenettoGUI';
  title.style.fontSize = '20px';
  title.style.fontWeight = 'bold';
  title.style.marginBottom = '10px';
  container.appendChild(title);

  // Create three buttons
  for (var i = 1; i <= 3; i++) {
    var button = document.createElement('button');
    button.textContent = 'Button ' + i;
    button.style.display = 'block';
    button.style.marginBottom = '5px';

    if (i === 1) {
      // Make Button 1 bigger and lime green
      button.style.width = '100px';
      button.style.height = '50px';
      button.style.background = 'limegreen';

      button.addEventListener('click', function() {
        document.body.style.backgroundColor = 'yellow';
      });
    } else {
      // For other buttons, show an alert on click
      button.addEventListener('click', function() {
        alert('Button clicked!');
      });
    }
    container.appendChild(button);
  }

  // Create Button 4
  var button4 = document.createElement('button');
  button4.textContent = 'Button 4';
  button4.style.display = 'block';
  button4.style.marginBottom = '5px';
  button4.addEventListener('click', function() {
    // Run the specified code on Button 4 click
    window.onbeforeunload = function() {
      return 'Do you want to close';
    };
    alert('Tab Secured');
  });
  container.appendChild(button4);

  // Create close button
  var closeButton = document.createElement('button');
  closeButton.textContent = 'Close';
  closeButton.style.display = 'block';
  closeButton.style.marginTop = '10px';
  closeButton.addEventListener('click', function() {
    document.body.removeChild(container);
  });
  container.appendChild(closeButton);

  // Append the container to the body
  document.body.appendChild(container);
})();
